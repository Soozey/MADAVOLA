{
  "name": "madavola",
  "private": true,
  "scripts": {
    "build:web": "npm run build --workspace @madavola/web",
    "build:web-admin": "npm run build --workspace madavola-web-admin",
    "test:api": "cd services/api && PYTHONPATH=. pytest -q",
    "check:web-bundle": "node scripts/check-web-bundle.mjs",
    "ci": "npm run build:web && npm run build:web-admin && npm run check:web-bundle && npm run test:api"
  },
  "packageManager": "pnpm@latest",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
